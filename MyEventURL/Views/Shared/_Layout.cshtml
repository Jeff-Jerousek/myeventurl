<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="fb:app_id" content="908917155889295" />
    <meta property="og:image" content="https://www.myeventurl.com/content/AddIn/mini_200_200.png" />
    <meta property="og:title" content="@ViewBag.Title - MyEventURL.com" />
    <meta property="og:description" content="@ViewBag.Description Publishing calendar reminders for events should be easy!" />
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="MyEventURL">
    <title>@ViewBag.Title - MyEventURL.com</title>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/vuejs")
    @Scripts.Render("~/bundles/momentjs")
    @Styles.Render("~/Content/styles")
    <script>
        //Identifying Account Information
        var Account = { Email: "@ViewBag.Email", UserName: "@ViewBag.UserName", Domain: "@ViewBag.Domain" };
    </script>
    <script>
        $.ready.then(function () {
            var redirecthosts = ["myeventurl.com", "myeventurl.azurewebsites.net", "myeventurl.azurefd.net"];
            if (redirecthosts.indexOf(window.location.hostname) > -1) {
                window.location = "https://www.myeventurl.com"
            }
        })
    </script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">
            <img src="~/Content/white_logo_transparent.png" style="height:40px" alt="myeventurl logo">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Manage", "Index", "Events", null, new { @class = "nav-link" })</li>
            </ul>
        </div>
        @Html.Partial("_LoginPartial")
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MakeMeetingsGreat.com</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-4140645-3"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-4140645-3');
    </script>

</body>
</html>
