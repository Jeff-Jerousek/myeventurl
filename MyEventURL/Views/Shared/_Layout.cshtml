<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="fb:app_id" content="908917155889295" />
    <meta property="og:image" content="https://www.myeventurl.com/content/AddIn/mini_200_200.png" />
    <meta property="og:title" content="@ViewBag.Title - MyEventURL.com" />
    <meta property="og:description" content="@ViewBag.Description Publishing calendar reminders for events should be easy!" />
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="MyEventURL">
    <title>@ViewBag.Title - MyEventURL.com</title>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/vuejs")
    @Scripts.Render("~/bundles/momentjs")
    @Styles.Render("~/Content/styles")
    <script>
        //Identifying Account Information
        var Account = { Email: "@ViewBag.Email", UserName: "@ViewBag.UserName", Domain: "@ViewBag.Domain" };
    </script>
    <script>
        $.ready.then(function () {
            var redirecthosts = ["myeventurl.com", "myeventurl.azurewebsites.net", "myeventurl.azurefd.net"];
            if (redirecthosts.indexOf(window.location.hostname) > -1) {
                window.location = "https://www.myeventurl.com"
            }
        })
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <input type="image" src="~/Content/white_logo_transparent.png" style="height:40px">
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Manage", "Index", "Events")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MakeMeetingsGreat.com</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
