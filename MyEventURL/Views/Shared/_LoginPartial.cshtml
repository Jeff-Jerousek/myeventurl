@if (Request.IsAuthenticated)
{
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item active nav-link">
                Hello, @ViewBag.Email!
            </li>
            <li class="nav-item active nav-link">
                @Html.ActionLink("Sign out", "SignOut", "Account")
            </li>
        </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item active nav-link"><a href="http://register.makemeetingsgreat.com">Register</a></li>
        <li class="nav-item active nav-link">@Html.ActionLink("Sign in", "SignIn", "Account", routeValues: new { path = Context.Request.RawUrl }, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
